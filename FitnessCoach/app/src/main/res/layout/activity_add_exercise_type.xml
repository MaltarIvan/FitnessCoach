<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hr.apps.maltar.fitnesscoach.activities.AddExerciseTypeActivity">

    <EditText
        android:id="@+id/add_exercise_type_name_text_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name:"/>

    <TextView
        android:id="@+id/add_exercise_type_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select category:"/>

    <Spinner
        android:id="@+id/add_exercise_type_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/add_exercise_type_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>
</LinearLayout>
